rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Market items collection rules
    match /market_items/{itemId} {
      // Allow reading if authenticated
      allow read: if request.auth != null;
      
      // Allow create if authenticated and sellerId matches user's ID
      allow create: if request.auth != null && 
                   request.resource.data.sellerId == request.auth.uid;
      
      // Allow update/delete if user is the seller
      allow update, delete: if request.auth != null && 
                          resource.data.sellerId == request.auth.uid;
    }

    // Deny access to other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
