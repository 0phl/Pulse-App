rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Market items collection rules
    match /market_items/{itemId} {
      // Allow reading if authenticated
      allow read: if request.auth != null;
      
      // Allow create if authenticated and sellerId matches user's ID
      allow create: if request.auth != null && 
                   request.resource.data.sellerId == request.auth.uid;
      
      // Allow update if user is seller or buyer
      allow update: if request.auth != null && (
        // Allow seller to update their own items
        resource.data.sellerId == request.auth.uid ||
        // Allow buyer to update when they're the buyer or becoming the buyer
        (
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['buyerUnreadCount', 'sellerUnreadCount', 'buyerId']) &&
          (
            resource.data.buyerId == request.auth.uid || 
            request.resource.data.buyerId == request.auth.uid ||
            resource.data.sellerId == request.auth.uid
          )
        )
      );
      
      allow delete: if request.auth != null && 
                   resource.data.sellerId == request.auth.uid;
    }

    // Deny access to other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
